<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="implement-handling-signal-to-manager" author="frolov">
        <createTable tableName="complaint">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_at" type="datetime"/>
            <column name="updated_at" type="datetime"/>
            <column name="user_id" type="uuid">
                <constraints referencedTableName="principal" referencedColumnNames="id"
                             foreignKeyName="fk__complaint__user" nullable="false"/>
            </column>
            <column name="entity_id" type="uuid">
                <constraints nullable="false" deleteCascade="true"/>
            </column>
            <column name="reason" type="varchar(10)"/>
        </createTable>
        <createTable tableName="publication">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="created_at" type="datetime"/>
            <column name="updated_at" type="datetime"/>
            <column name="manager_id" type="uuid">
                <constraints referencedTableName="principal" referencedColumnNames="id"
                             foreignKeyName="fk__publication__principal" nullable="false"/>
            </column>
            <column name="title" type="varchar(100)"/>
            <column name="content" type="varchar(1000)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>